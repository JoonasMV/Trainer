<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/setCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="set"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="40dp"
        app:layout_constraintEnd_toStartOf="@+id/setRepField"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/setRepField"
        android:layout_width="103dp"
        android:layout_height="58dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="reps"
        android:inputType="number"
        app:layout_constraintEnd_toStartOf="@+id/setWeightField"
        app:layout_constraintStart_toEndOf="@+id/setCounter"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/setWeightField"
        android:layout_width="121dp"
        android:layout_height="58dp"
        android:layout_marginStart="24dp"
        android:ems="10"
        android:hint="weight"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/setRepField"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
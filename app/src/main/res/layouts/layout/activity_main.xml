<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".mainActivity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/mainContainer"
            android:name="com.example.trainer.WelcomeScreen_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            tools:layout="@layout/fragment_welcome_screen" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10"

            >

            <Button
                android:id="@+id/exercisesBtn"
                style="@style/button_basic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/exercises"
                android:layout_weight="1"
                android:drawableTop="@drawable/exercises"
                android:drawableTint="@color/white"
                />
<!--                app:layout_constraintStart_toStartOf="parent" -->

            <Button
                android:id="@+id/homeBtn"
                style="@style/button_basic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="home"
                android:drawableTop="@drawable/home"
                android:drawableTint="@color/white"
                />

            <Button
                android:id="@+id/workoutsBtn"
                style="@style/button_basic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/workouts"
                android:drawableTop="@drawable/workout"
                android:drawableTint="@color/white"
                />

            <Button
                android:id="@+id/progressBtn"
                style="@style/button_basic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/history"
                android:drawableTop="@drawable/progress"
                android:drawableTint="@color/white"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
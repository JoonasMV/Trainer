<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".mainActivity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/mainContainer"
            android:name="com.example.trainer.WelcomeScreen_fragment"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            tools:layout="@layout/fragment_welcome_screen" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="15"

            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/exercisesBtn"
                style="@style/Theme.Trainer.button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                app:icon="@drawable/exercises"
                app:iconGravity="textStart"
                app:iconTint="@color/white"
                app:iconPadding="0dp"
                app:iconSize="50dp"
                app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/homeBtn"
                style="@style/Theme.Trainer.button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                app:icon="@drawable/home"
                app:iconGravity="textStart"
                app:iconTint="@color/white"
                app:iconSize="27dp"
                app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/workoutsBtn"
                style="@style/Theme.Trainer.button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                app:icon="@drawable/workout"
                app:iconGravity="textStart"
                app:iconTint="@color/white"
                app:iconSize="40dp"
                app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/progressBtn"
                style="@style/Theme.Trainer.button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                app:icon="@drawable/progress"
                app:iconGravity="textStart"
                app:iconTint="@color/white"
                app:iconSize="30dp"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
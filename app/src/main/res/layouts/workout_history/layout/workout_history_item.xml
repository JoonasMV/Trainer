<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        style="@style/list_theme"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:id="@+id/workoutHistoryItem"
            style="@style/list_text"
            android:layout_weight="2"
            android:text="workoutName" />

        <Button
            android:id="@+id/deleteButton"
            style="@style/button_list"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/delete_workout" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            >
            <Button
                android:layout_weight="1"
                android:id="@+id/saveAsPresetBtn"
                style="@style/button_list"
                android:layout_height="match_parent"
                android:text="@string/makePreset"
                android:padding="0dp"
                />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
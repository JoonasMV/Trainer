<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Trainer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray2</item>
        <item name="colorPrimaryVariant">@color/gray2</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/purple_200</item>
        <!-- Secondary brand color. -->
        <!--item name="android:background">@color/gray</item-->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="actionBarStyle">@style/MyCustomBar</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Trainer.button" parent="button_basic">
        <item name="backgroundTint">@color/gray2</item>
    </style>

    <style name="Theme.Trainer.button.listButton" parent="button_basic">
        <item name="android:layout_margin">2dp</item>
        <item name="backgroundTint">@color/gray2</item>
    </style>

    <style name="MyCustomBar" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="background">@color/gray2</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>
</resources>
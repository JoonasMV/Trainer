<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="button_basic" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/no_margin_button</item>
        <item name="backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="button_round" parent="button_basic">
        <item name="android:background">@drawable/button_round</item>
    </style>

    <style name="button_menu" parent="button_basic">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button_delete" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/button_round</item>
        <item name="android:src">@drawable/button_delete</item>
        <item name="android:tint">?attr/colorTertiary</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:padding">5dp</item>
        <item name="android:inset">0dp</item>
        <item name="android:layout_margin">5dp</item>

    </style>
    <style name="button_three_dots" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/button_round</item>
        <item name="android:src">@drawable/baseline_more_horiz_24</item>
        <item name="android:tint">?attr/colorSecondary</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:padding">5dp</item>
        <item name="android:inset">0dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="button_list" parent="button_round">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>
    <style name="three_dots_button" parent="ThemeOverlay.AppCompat">
        <item name="backgroundTint">@style/underline_color</item>
    </style>
</resources>
<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="button_basic" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:background">@drawable/no_margin_button</item>
        <item name="backgroundTint">@color/color3</item>
    </style>

    <style name="button_round" parent="button_basic">
        <item name="android:background">@drawable/button_round</item>
    </style>

    <style name="button_list" parent="button_round">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="button_basic" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/no_margin_button</item>
        <item name="backgroundTint">?attr/colorPrimaryVariant</item>
    </style>

    <style name="button_round" parent="button_basic">
        <item name="android:background">@drawable/button_round</item>
    </style>

    <style name="button_list" parent="button_round">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>
    <style name="three_dots_button" parent="ThemeOverlay.AppCompat">
        <item name="backgroundTint">@style/underline_color</item>
    </style>
</resources>